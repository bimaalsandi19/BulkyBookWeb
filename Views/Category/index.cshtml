@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>
                &nbsp;
                Create New Category</a>
        </div>
    </div>
    <br>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Created DateTime</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td></td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.CreatedDateTime</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-warning mx-1" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i
                                class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i
                                class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }



        </tbody>
    </table>
</div>